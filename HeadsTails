#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){
  int i,c,sum1=0,sum2=0;
  char name[10];
  
  printf("Who are you?\n> ");
  scanf("%s",name);
  printf("Hello, %s!\n",name);
  
  printf("Tossing a coin...\n");
  srand(time(NULL));
  for(i=0;i<3;i++){
    c=rand()%2;
    if(c==0){
        printf("Round %d: Heads\n",i+1);
        sum1++;
    }
    else{
        printf("Round %d: Tails\n",i+1);
        sum2++;
    }
  }
  printf("Heads: %d, Tails: %d\n",sum1,sum2);
  return 0;
}
